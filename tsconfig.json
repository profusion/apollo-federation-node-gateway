{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./build"
  },
  "include": [
    "lib",
    "bin"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib/**/*.test.ts"
  ]
}
